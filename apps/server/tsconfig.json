{
  "compilerOptions": {
    "allowJs": true,
    "baseUrl": ".",
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "outDir": "./dist",
    "paths": {
      "@english/*": ["./src/models/english/*"],
      "@german/*": ["./src/models/german/*"],
      "@models/*": ["./src/models/*"],
      "@data/*": ["./src/data/*"]
    },
    "resolveJsonModule": true,
    "sourceMap": true,
    "target": "es6",
  },
  "lib": ["es6"],
  "exclude": ["node_modules", "coverage", "**.spec.ts"],
  "include": ["./src"],
  "max-line-length": [
    true,
      {
        "limit": 100,
        "ignore-pattern": "^import |^export {(.*?)}"
      }
  ],
}
