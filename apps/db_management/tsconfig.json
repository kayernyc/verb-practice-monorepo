{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "baseUrl": "./src",
    "composite": false,
    "esModuleInterop": true,
    "module": "node16",
    "moduleResolution": "node",
    "outDir": "./dist",
    "rootDir": "./src",
    "resolveJsonModule": true,
    "paths": {
      "@controllers/*": ["./controllers/*"],
      "@models/*": ["./models/*"],
      "@utilities/*": ["./utilities/*"]
    }
  },
  "include": ["./src"]
}
