{
  "compilerOptions": {
    "allowJs": true,
    "baseUrl": ".",
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "./dist",
    "resolveJsonModule": true,
    "sourceMap": true,
    "target": "es6",
  },
  "lib": ["es6"],
  "exclude": ["node_modules", "coverage", "**.spec.ts"],
  "include": ["./src"],
  "max-line-length": [
    true,
      {
        "limit": 100,
        "ignore-pattern": "^import |^export {(.*?)}"
      }
  ],
}
